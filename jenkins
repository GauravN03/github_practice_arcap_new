pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/GauravN03/github_practice_arcap_new.git', branch: 'master'
            }
        }

        stage('Run Python Script') {
            steps {
                sh '''
                echo "Running backend.py..."
                python3 backend.py
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Python script executed successfully!'
        }
        failure {
            echo '❌ Execution failed. Check logs for details.'
        }
    }
}
